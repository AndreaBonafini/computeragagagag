<Window x:Class="New_Computer_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:New_Computer_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel Margin="10,46,2,-1" RenderTransformOrigin="0.501,0.622">
        <Label x:Name="message" Content="New Computer" RenderTransformOrigin="0.482,0.244"/>
        <TextBox x:Name="txtName" Text="Andrea Bonafini"/>
        <Button x:Name="btnCPU" Content="Click for CPU" Click="btnCPU_Click"/>

        <Button x:Name="btnMotherboard" Content="Click for Motherboard" Click="btnMotherboard_Click"/>
        <Button x:Name="btnMemory" Content="Click for Memory" Click="btnMemory_Click"/>
        <Button x:Name="btnStorage" Content="Click for Storage" Click="btnStorage_Click"/>
        <Button x:Name="btnCase" Content="Click for Case" Click="btnCase_Click"/>
        <Button x:Name="btnGraphicCard" Content="Click for GraphicCard" Click="btnGraphicCard_Click"/>
        <Button x:Name="btnOpticalDrive" Content="Click for OpticalDrive" Click="btnOpticalDrive_Click"/>
    </StackPanel>
</Window>
